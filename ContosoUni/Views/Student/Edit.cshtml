@model Student

@{
    ViewBag.Title = "Edit Page";
    Layout = "_Layout";
}

<h3>Edit Student Details</h3>

<form asp-action="Edit" method="post" asp-route-id="@Model.ID">
    <div class="form-group">
        @*        <label for="FirstName">First Name</label>*@
        @*        <input type="text" class="form-control" id="FirstName" placeholder="First Name" asp-for="FirstName">*@
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" value="@Model.FirstName"></input>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" value="@Model.LastName"/>
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentDate"></label>
        <input asp-for="EnrollmentDate" class="form-control" value="@Model.EnrollmentDate"/>
    </div>
   
    <button type="submit" class="btn btn-primary">Edit</button>

</form>
